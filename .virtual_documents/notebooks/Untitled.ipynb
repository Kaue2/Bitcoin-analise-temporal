








import yfinance as yf
from statsmodels.tsa.stattools import adfuller
from statsmodels.graphics.tsaplots import plot_acf, plot_pacf
from statsmodels.tsa.arima.model import ARIMA
from sklearn.metrics import mean_squared_error
import matplotlib.pyplot as plt
import warnings

warnings.filterwarnings("ignore")


btc = yf.download("BTC-USD", period="max")
close = btc['Close'].dropna()

# Vamos começar testando a função para os dados originais
# Se nosso p-valor for maior do que 0.05 derivamos e repetimos o processo


print('ADF nível (p-valor):', adfuller(close)[1])  # ADF na série original
print('ADF 1ª diferença (p-valor):', adfuller(close.diff().dropna())[1])  # ADF com uma derivação





import pandas as pd
from statsmodels.graphics.tsaplots import plot_acf, plot_pacf
import matplotlib.pyplot as plt

est = close.diff().dropna()

plot_acf(est, lags=20)
plt.show()

plot_pacf(est, lags=20)
plt.show()



from itertools import product
from pmdarima import auto_arima

btc_data = yf.download('BTC-USD', period='max', interval='1d')
btc_data = btc_data['Close']

train_size = int(len(btc_data) * 0.8)
train, test = btc_data[:train_size], btc_data[train_size:]

auto_model = auto_arima(train, seasonal=False, stepwise=True)
print(auto_model.summary())

# Previsão
n_test = len(test)
forecast = auto_model.predict(n_periods=n_test)

# Plot
plt.figure(figsize=(10, 3))
plt.plot(train.index, train, label='Train Data')
plt.plot(test.index, test, label='Test Data')
plt.plot(test.index, forecast, label='Auto ARIMA Predictions')
plt.title(f'Auto ARIMA Fit: {auto_model.order}')
plt.xlabel('Date')
plt.ylabel('Price (USD)')
plt.legend()
plt.show()



